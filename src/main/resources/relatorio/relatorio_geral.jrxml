<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="Relatorio_Geral"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="40"
              bottomMargin="40"
              uuid="99999999-9999-9999-9999-999999999999">

    <!-- ============================= ESTILOS ============================= -->
    <style name="TitleStyle" fontName="Helvetica" fontSize="20" isBold="true" forecolor="#00468C"/>
    <style name="SectionTitle" fontName="Helvetica" fontSize="14" isBold="true" pdfFontName="Helvetica-Bold" forecolor="#282828"/>
    <style name="TableHeader" mode="Opaque" backcolor="#00468C" forecolor="#FFFFFF" fontName="Helvetica" fontSize="12" isBold="true"/>
    <style name="TableCell" fontName="Helvetica" fontSize="11"/>

    <!-- ============================= PARAMETROS ============================= -->
    <parameter name="logo" class="java.lang.String"/>
    <parameter name="titulo" class="java.lang.String"/>
    <parameter name="FuncionariosDataSource" class="net.sf.jasperreports.engine.JRDataSource"/>
    <parameter name="MaquinasDataSource" class="net.sf.jasperreports.engine.JRDataSource"/>

    <!-- ============================= FIELDS ============================= -->
    <field name="funcionarios" class="java.util.List"/>
    <field name="maquinas" class="java.util.List"/>

    <!-- ============================= SUBDATASETS ============================= -->
    <subDataset name="FuncionariosDataset">
        <field name="name" class="java.lang.String"/>
        <field name="shift" class="com.projeto.tcc.enums.Shift"/>
        <field name="availability" class="java.lang.Boolean"/>
        <field name="sector.name" class="java.lang.String"/>
        <field name="sector.department.name" class="java.lang.String"/>
        <field name="status" class="com.projeto.tcc.enums.StatusEmployee"/>
    </subDataset>

    <subDataset name="MaquinasDataset">
        <field name="name" class="java.lang.String"/>
        <field name="serieNumber" class="java.lang.Integer"/>
        <field name="lastMaintenance" class="java.time.LocalDate"/>
        <field name="sector.name" class="java.lang.String"/>
        <field name="status" class="com.projeto.tcc.enums.StatusMachine"/>
    </subDataset>

    <!-- ============================= CABEÇALHO ============================= -->
    <title>
        <band height="80">
            <image>
                <reportElement x="0" y="0" width="60" height="60"/>
                <imageExpression><![CDATA[$P{logo}]]></imageExpression>
            </image>
            <textField>
                <reportElement x="70" y="15" width="400" height="30" style="TitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{titulo}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- ============================= DETALHE ============================= -->
    <detail>
        <band height="600">

            <!-- Título Funcionários -->
            <staticText>
                <reportElement x="0" y="0" width="555" height="25" style="SectionTitle"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Relatório de Funcionários]]></text>
            </staticText>

            <!-- Subrelatório Funcionários -->
            <subreport>
                <reportElement x="0" y="30" width="555" height="100"/>
                <dataSourceExpression><![CDATA[$P{FuncionariosDataSource}]]></dataSourceExpression>
                <subreportExpression><![CDATA["relatorio/subreport_funcionarios.jasper"]]></subreportExpression>
            </subreport>

            <!-- Título Máquinas -->
            <staticText>
                <reportElement x="0" y="170" width="555" height="25" style="SectionTitle"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Relatório de Máquinas]]></text>
            </staticText>

            <!-- Tabela Máquinas -->
            <componentElement>
                <reportElement x="0" y="200" width="555" height="120"/>
                <jr:table>
                    <datasetRun subDataset="MaquinasDataset">
                        <dataSourceExpression><![CDATA[$P{MaquinasDataSource}]]></dataSourceExpression>
                    </datasetRun>

                    <jr:column width="120">
                        <jr:columnHeader height="25" style="TableHeader">
                            <staticText>
                                <reportElement x="0" y="0" width="120" height="25"/>
                                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                                <text><![CDATA[Máquina]]></text>
                            </staticText>
                        </jr:columnHeader>
                        <jr:detailCell height="20" style="TableCell">
                            <textField>
                                <reportElement x="0" y="0" width="120" height="20"/>
                                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
                            </textField>
                        </jr:detailCell>
                    </jr:column>

                    <jr:column width="90">
                        <jr:columnHeader height="25" style="TableHeader">
                            <staticText>
                                <reportElement x="0" y="0" width="90" height="25"/>
                                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                                <text><![CDATA[Nº Série]]></text>
                            </staticText>
                        </jr:columnHeader>
                        <jr:detailCell height="20" style="TableCell">
                            <textField>
                                <reportElement x="0" y="0" width="90" height="20"/>
                                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                                <textFieldExpression><![CDATA[$F{serieNumber}]]></textFieldExpression>
                            </textField>
                        </jr:detailCell>
                    </jr:column>

                    <jr:column width="120">
                        <jr:columnHeader height="25" style="TableHeader">
                            <staticText>
                                <reportElement x="0" y="0" width="120" height="25"/>
                                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                                <text><![CDATA[Última Manutenção]]></text>
                            </staticText>
                        </jr:columnHeader>
                        <jr:detailCell height="20" style="TableCell">
                            <textField pattern="dd/MM/yyyy">
                                <reportElement x="0" y="0" width="120" height="20"/>
                                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                                <textFieldExpression><![CDATA[$F{lastMaintenance}]]></textFieldExpression>
                            </textField>
                        </jr:detailCell>
                    </jr:column>

                    <jr:column width="100">
                        <jr:columnHeader height="25" style="TableHeader">
                            <staticText>
                                <reportElement x="0" y="0" width="100" height="25"/>
                                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                                <text><![CDATA[Setor]]></text>
                            </staticText>
                        </jr:columnHeader>
                        <jr:detailCell height="20" style="TableCell">
                            <textField>
                                <reportElement x="0" y="0" width="100" height="20"/>
                                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                                <textFieldExpression><![CDATA[$F{sector.name}]]></textFieldExpression>
                            </textField>
                        </jr:detailCell>
                    </jr:column>

                    <jr:column width="125">
                        <jr:columnHeader height="25" style="TableHeader">
                            <staticText>
                                <reportElement x="0" y="0" width="125" height="25"/>
                                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                                <text><![CDATA[Status]]></text>
                            </staticText>
                        </jr:columnHeader>
                        <jr:detailCell height="20" style="TableCell">
                            <textField>
                                <reportElement x="0" y="0" width="125" height="20"/>
                                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                                <textFieldExpression><![CDATA[$F{status}.toString()]]></textFieldExpression>
                            </textField>
                        </jr:detailCell>
                    </jr:column>
                </jr:table>
            </componentElement>

        </band>
    </detail>

    <!-- ============================= RODAPÉ ============================= -->
    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA["Gerado em: " + new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm").format(new java.util.Date())]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="450" y="0" width="100" height="20"/>
                <textElement textAlignment="Right"><font size="9"/></textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </bade