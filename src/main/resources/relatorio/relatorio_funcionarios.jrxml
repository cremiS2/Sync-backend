<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="Relatorio_Funcionarios"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="40"
              bottomMargin="40"
              uuid="abcd1234-5678-90ab-cdef-1234567890ab">
    <!-- ============================= ESTILO ============================= -->
    <style name="TitleStyle" fontName="Helvetica" fontSize="20" isBold="true" forecolor="#00468C"/>
    <style name="TableHeader" mode="Opaque" backcolor="#00468C" forecolor="#FFFFFF" fontName="Helvetica" fontSize="12" isBold="true"/>
    <style name="TableCell" fontName="Helvetica" fontSize="11"/>
    <style name="SectionTitle" fontName="Helvetica" fontSize="14" isBold="true" pdfFontName="Helvetica-Bold" forecolor="#282828"/>

    <!-- ============================= PARAMS ============================= -->
    <parameter name="logo" class="java.lang.String"/>
    <parameter name="titulo" class="java.lang.String"/>

    <!-- ============================= CAMPOS ============================= -->
    <field name="name" class="java.lang.String"/>
    <field name="shift" class="com.projeto.tcc.enums.Shift"/>
    <field name="availability" class="java.lang.Boolean"/>
    <field name="sector_name" class="java.lang.String"/>
    <field name="department_name" class="java.lang.String"/>
    <field name="status" class="com.projeto.tcc.enums.StatusEmployee"/>



    <!-- ============================= CABEÇALHO ============================= -->
    <title>
        <band height="80">
            <image>
                <reportElement x="0" y="0" width="60" height="60"/>
                <imageExpression><![CDATA[$P{logo}]]></imageExpression>
            </image>
            <textField>
                <reportElement x="70" y="15" width="400" height="30" style="TitleStyle"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{titulo}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- ============================= CABEÇALHO DA TABELA ============================= -->
    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement x="0" y="0" width="120" height="25" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Nome]]></text>
            </staticText>
            <staticText>
                <reportElement x="120" y="0" width="80" height="25" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Turno]]></text>
            </staticText>
            <staticText>
                <reportElement x="200" y="0" width="90" height="25" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Disponível]]></text>
            </staticText>
            <staticText>
                <reportElement x="290" y="0" width="100" height="25" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Setor]]></text>
            </staticText>
            <staticText>
                <reportElement x="390" y="0" width="100" height="25" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Departamento]]></text>
            </staticText>
            <staticText>
                <reportElement x="490" y="0" width="65" height="25" style="TableHeader"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Status]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- ============================= DETALHE (LINHAS) ============================= -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="120" height="20" style="TableCell"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="120" y="0" width="80" height="20" style="TableCell"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{shift}.toString()]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="200" y="0" width="90" height="20" style="TableCell"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{availability} ? "Sim" : "Não"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="290" y="0" width="100" height="20" style="TableCell"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{sector_name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="390" y="0" width="100" height="20" style="TableCell"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{department_name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="490" y="0" width="65" height="20" style="TableCell"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{status}.toString()]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- ============================= RODAPÉ ============================= -->
    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Gerado em: " + new java.text.SimpleDateFormat("dd/MM/yyyy HH:mm").format(new java.util.Date())]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="450" y="0" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>